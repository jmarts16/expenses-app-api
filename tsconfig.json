{
  "buildOnSave": false,
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "lib": [ "es2016.array.include", "dom", "es6", "dom.iterable", "scripthost" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/**/*.d.ts",
    "./typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}